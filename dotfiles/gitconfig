[user]
	name = Greg Tarsa
	email = gltarsa@gmail.com
	signingkey = 4C17D589
[core]
	editor = vim
	excludesfile = ~/.gitignore_global
[merge]
	tool = vimdiff
[color]
	ui = auto
  branch = auto
	diff = auto
	interactive = auto
	status = auto
[color "decorate"]
  # these colors are explicit settings for the official
  # defaults, here to make it easier to customize
  head = cyan bold
  branch = green bold
  tag = yellow bold
  remoteBranch = red bold
  stash = magenta bold
[pretty]
  myline = '%C(auto)%h %d %s (%Cblue%an, %Cred%ad%Creset)'
#
# git <cmd> shorthand definitions
[alias]
  # Log Line (color)
  lll = log --graph --decorate --oneline --all --color --pretty=myline --date=relative
  ll  = log --graph --decorate --oneline --all --color --pretty=myline --date=relative --max-count=10
  # shorthand and spellos
	dif = diff
  co  = checkout
  s = status
	dif = diff
  # handy features
	aliases = !git config -l | grep alias | cut -c 7-
  # only push if our ref is up-to-date with the destination
	please = push --force-with-lease
  # glom the current commit onto the last commit (saves a rebase -i/squash)
	commend = commit --amend --no-edit
  # stash variants
  # stsh - only unstanged changes to tracked files
  stsh = stash --keep-index
  # staash - untracked AND tracked files
  staash = stash --include-untracked
  # ignored, untracked and tracked files (equiv to clone state)
  staaash = stash --all

[push]
	default = tracking

#
# setting the helper to cache helps relieve the need to type your
# password all the time
[credential]
	helper = cache
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[filter "media"]
	clean = git media clean %f
	smudge = git media smudge %f
	required = true
