[user]
	name = Greg Tarsa
	email = gltarsa@gmail.com
	signingkey = 4C17D589
[core]
	editor = vim
	excludesfile = /Users/tarsa/.gitignore_global
[merge]
	tool = vimdiff
[color]
	branch = auto
	status = auto
	interactive = auto
	diff = auto
	ui = auto
[pretty]
  myline = '%C(auto)%h %d %s (%Cblue%an, %Cred%ad%Creset)'
#
# git <cmd> shorthand definitions
[alias]
  # log One Line (color)
	lol = log --graph --decorate --oneline --all --color
  # Log Line (color)
  lll = log --graph --decorate --oneline --all --color --pretty=myline --date=relative
  ll  = log --graph --decorate --oneline --all --color --pretty=myline --date=relative --max-count=10
  # shorthand and spellos
	dif = diff
  co  = checkout

[push]
	default = tracking

#
# setting the helper to cache helps relieve the need to type your
# password all the time
[credential]
	helper = cache
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path =
[mergetool "sourcetree"]
	cmd = /Applications/SourceTree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[filter "media"]
	clean = git media clean %f
	smudge = git media smudge %f
	required = true
